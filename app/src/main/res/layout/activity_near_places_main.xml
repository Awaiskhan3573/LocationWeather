<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".nearplaces.NearPlacesMainActivity">
   <include
       layout="@layout/near_places_toolbar"
       android:id="@+id/toolbarNearPlace"/>
    <com.mapbox.maps.MapView
        android:id="@+id/mapviewNearPlace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/toolbarNearPlace"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnNearPlaces"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Near Places"
        android:textColor="@color/white"
        android:background="@drawable/weather_details_shape"
        android:backgroundTint="@color/darkSkyBlueColor"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/_20sdp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/_20sdp"
        android:padding="@dimen/_10sdp"/>





</androidx.constraintlayout.widget.ConstraintLayout>