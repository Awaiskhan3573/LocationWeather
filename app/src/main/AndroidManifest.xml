<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.note.app.myfirstapp">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyFirstApp"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".location.FetchRouteActivity"
            android:exported="false" />
        <activity
            android:name=".mediaplayer.musicplayer.MusicPlayerActivity"
            android:exported="false"
            android:theme="@style/Theme.ActivityMusicPlayer" />
        <activity
            android:name=".mediaplayer.VideoPlayActivity"
            android:exported="false" />
        <activity
            android:name=".mediaplayer.MediaPlayerMainActivity"
            android:exported="false" />
        <activity
            android:name=".nearplaces.NearPlacesMainActivity"
            android:exported="false"
            android:theme="@style/Theme.ActivityNearLocation" />
        <activity
            android:name=".readjson.EmployeeReadJsonActivity"
            android:exported="false" />
        <activity
            android:name=".readjson.CountryReadJsonActivity"
            android:exported="false" />
        <activity
            android:name=".location.NavigationMapBox10Activity"
            android:exported="false" />
        <activity
            android:name=".weatherforecast.ForecastWeatherActivity"
            android:exported="false"
            android:theme="@style/Theme.ActivityWeather" />
        <activity
            android:name=".location.LocationMainActivity"
            android:exported="false"
            android:theme="@style/Theme.ActivityLocation" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>